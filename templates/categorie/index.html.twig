{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block pageTitle %}
    Gestion Catégorie
{% endblock %}
{% block body %}


    <table class="table table-striped table-bordered">
        <div class="my-2 offset-10">
            <a class="btn btn-secondary" href="{{ path('app_categorie_new') }}">Nouvelle catégorie</a>
        </div>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.nom }}</td>
                <td>
                    <a class="btn-primary px-4 py-2 offset-2" href="{{ path('app_categorie_show', {'id': categorie.id}) }}"><i class="fas fa-solid fa-eye"></i></a>
                    <a class="btn-warning px-4 py-2 offset-1" href="{{ path('app_categorie_edit', {'id': categorie.id}) }}"><i class="fas fa-edit btnedit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
