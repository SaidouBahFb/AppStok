{% extends 'base.html.twig' %}

{% block title %}Entree{% endblock %}

{% block pageTitle %}
        Details de l'entrée
{% endblock %}

{% block body %}

    <table class="table table-striped table-bordered">
            <div class="my-2 offset-10">
                <a class="btn btn-secondary" href="{{ path('app_entree_index') }}">retour à la liste</a>
            </div>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entree.id }}</td>
            </tr>
            <tr>
                <th>DateE</th>
                <td>{{ entree.dateE ? entree.dateE|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>QteE</th>
                <td>{{ entree.qteE }}</td>
            </tr>
        </tbody>
    </table>

    <div class = "d-flex align-items-center">        
        <a class="mt-1  btn btn-warning offset-5" href="{{ path('app_entree_edit', {'id': entree.id}) }}">Modifier</a> 
        <a class="mx-2">{{ include('entree/_delete_form.html.twig') }}</a>
    </div>

{% endblock %}
