{% extends 'base.html.twig' %}

{% block title %}Sortie{% endblock %}

{% block body %}
    <h1>Sortie</h1>

    <table class="table table-striped table-bordered">
            <div class="my-2 offset-10">
                <a class="btn btn-secondary" href="{{ path('app_sortie_index') }}">retour à la liste</a>
            </div>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sortie.id }}</td>
            </tr>
            <tr>
                <th>Date Sortie</th>
                <td>{{ sortie.dateS ? sortie.dateS|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Quantité Sortie</th>
                <td>{{ sortie.qteS }}</td>
            </tr>
        </tbody>
    </table>
    <div class = "d-flex align-items-center">        
            <a class="mt-1  btn btn-warning offset-5" href="{{ path('app_sortie_edit', {'id': sortie.id}) }}">Modifier</a> 
            <a class="mx-2"> {{ include('sortie/_delete_form.html.twig') }} </a>
        </div>
{% endblock %}
