{% extends 'base.html.twig' %}

{% block title %}Sortie index{% endblock %}

{% block pageTitle %}
    Liste des sorties
{% endblock %}

{% block body %}

    <table class="table table-striped table-bordered">
        <div class="my-2 offset-10">
            <a class="btn btn-secondary" href="{{ path('app_sortie_new') }}">Nouvelle sortie</a>
        </div>
        <thead>
            <tr>
                <th>Id</th>
                <th>Date Sortie</th>
                <th>Quantit√© Sortie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <tr>
                <td>{{ sortie.id }}</td>
                <td>{{ sortie.dateS ? sortie.dateS|date('Y-m-d') : '' }}</td>
                <td>{{ sortie.qteS }}</td>
                <td>
                    <a class="btn-primary px-4 py-2 offset-2" href="{{ path('app_sortie_show', {'id': sortie.id}) }}"><i class="fas fa-solid fa-eye"></i></a>
                    <a class="btn-warning px-4 py-2 offset-1" href="{{ path('app_sortie_edit', {'id': sortie.id}) }}"><i class="fas fa-edit btnedit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">pas de sortie</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
