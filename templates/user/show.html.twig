{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block pageTitle %}
        Details utilisateur
{% endblock %}

{% block body %}
    

<table class="table table-striped table-bordered">
            <div class="my-2 offset-10">
                <a class="btn btn-secondary" href="{{ path('app_user_index') }}">retour Ã  la liste</a>
            </div>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                    {% for role in user.roles %}
                        {% if role == "ROLE_USER" %}
                            Utilisateur
                        {% elseif role == "ROLE_EDITOR" %}
                            Editeur
                        {% elseif role == "ROLE_ADMIN" %}
                            Administrateur
                        {% endif %}
                    {% endfor %}
                </td>
            </tr>
            
        </tbody>
    </table>
    <div class = "d-flex align-items-center">        
            <a class="mt-1  btn btn-warning offset-5" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a> 
            <a class="mx-2">{{ include('user/_delete_form.html.twig') }}</a>
        </div>
{% endblock %}
